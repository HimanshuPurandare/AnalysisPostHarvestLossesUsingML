<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shreyas.demo.AddWarehouse"
    android:orientation="vertical"


    >
    <include android:id="@+id/mytoolbar" layout="@layout/mytoolbar" />


    <ScrollView android:id="@+id/signup_form" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/email_signup_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"


            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter the Go-down Name"
                    android:id="@+id/warehousename"
                    />



            <FrameLayout android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="25dp"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:id="@+id/warehouse_location_display"
                    android:scaleType="fitEnd"
                    android:layout_marginRight="16dp"

                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:textSize="18sp"
                    android:id="@+id/click_here_warehouse"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/clickherestring"
                    />
            </FrameLayout>




            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_add_warehouse"
                    android:id="@+id/addwarehouse"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    style="?android:textAppearanceSmall"


                    android:shadowColor="#A8A8A8"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    android:background="@drawable/buttonshape"
                    android:textColor="#FFFFFF"

                    />

            </LinearLayout>
    </ScrollView>


</LinearLayout>
