<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
    <corners
        android:radius="14dp"
        />
    <gradient
        android:gradientRadius="100"

        android:centerColor="@color/colorPrimaryDark"
        android:startColor="@color/colorFaintPrimary"
        android:endColor="@color/colorPrimary"
        android:type="radial"
        />
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp"
        />
    <size
        android:width="200dp"
        android:height="45dp"
        />
    <stroke
        android:width="3dp"
        android:color="#878787"
        />
</shape>